{
  "manifest_version": 2,

  "name": "itty.be",
  "description": "Privacy Respecting URL Shortener",
  "version": "1.0",

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "24": "assets/icon24.png",
      "32": "assets/icon32.png"
    },

    "default_popup": "index.html",
    "default_title": "Shorten URL"
  },

  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "http://itty.be/*"
  ]
}
